@{
    ViewData["Title"] = "Question";
}

<div class="alert alert-primary text-left" role="alert">
  <div class="row row-cols-1 row-cols-sm-2">
    <div class="col">
      <h4 class="alert-heading">Pregunta de ejemplo</h4>
      <p>Esta es una pregunta de ejemplo y así debe visualizarse</p>
      <p class="mb-0">Creada por <strong>Yorologo</strong></p>
    </div>
  </div>
</div>
<div class="alert alert-info text-left" role="alert">
  <p>Esta es una respuesta de ejemplo</p>
  <hr />
  <div class="container">
    <div class="row">
      <div class="col-sm">Creada por <strong>Yorologo</strong></div>
    </div>
  </div>
</div>
<div class="alert alert-success text-left" role="alert">
  <p>Esta es una repuesta de ejemplo marcada como correcta</p>
  <hr />
  <div class="container">
    <div class="row">
      <div class="col-sm">Creada por <strong>Yorologo</strong></div>
      <div class="col-sm">
        <h4>
          <span class="px-4 badge badge-success"
            >Respuesta correcta</span
          >
        </h4>
      </div>
    </div>
  </div>
</div>
<div class="card mb-3">
  <div class="card-header">
    <h3>Responder</h3>
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col">
        <form method="POST" action="">
          <div class="form-group text-left">
            <label for="answer">Respuesta</label>
            <textarea
              class="form-control"
              id="answer"
              name="answer"
              placeholder="Ingrese la respuesta"
              required
            ></textarea>
            <input type="hidden" name="id" value="" />
          </div>
          <div class="text-center mt-3">
            <button type="submit" class="btn btn-primary">
              Enviar respuesta
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

