@model prueba_toka.Models.User;

@{
    ViewData["Title"] = "Login";
}

<div class="card mb-3">
  <div class="card-header">
    <h3>Ingresa a tu cuenta</h3>
  </div>
  <div class="card-body">
    <div asp-validation-summary="ModelOnly" class="alert alert-primary" role="alert"></div>
    <div class="row">
      <div class="col">
        <form method="POST" action="/User/ValidateUser" role="form">
          <div class="form-group text-left">
            <label asp-for="Email"></label>
            <input
              type="email"
              class="form-control"
              asp-for="Email"
              placeholder="Ingrese su correo"
              required
            />
          </div>
          <div class="form-group text-left">
            <label asp-for="Password"></label>
            <input
              type="password"
              class="form-control"
              asp-for="Password"
              placeholder="Ingrese su contraseña"
              pattern=".{6,}"
              required
            />
          </div>
          <div class="text-center mt-3">
            <button type="submit" class="btn btn-primary">
              Ingresar
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
      
